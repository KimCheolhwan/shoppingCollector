CREATE TABLE `USER` (
  `USER_ID` BIGINT AUTO_INCREMENT,
  `EMAIL` VARCHAR(20),
  `PASSWORD` VARCHAR(20),
  `REGISTER_DATE` DATETIME,
  `UPDATE_DATE` DATETIME,
  PRIMARY KEY (`USER_ID`)
);

CREATE TABLE `CATEGORY` (
  `CATEGORY_ID` BIGINT AUTO_INCREMENT,
  `NAME` VARCHAR(20),
  `USER_ID` BIGINT,
  PRIMARY KEY (`CATEGORY_ID`),
  FOREIGN KEY (`USER_ID`) REFERENCES `USER`(`USER_ID`)
);

CREATE TABLE `ITEM` (
  `ITEM_ID` BIGINT AUTO_INCREMENT,
  `COMPANY` VARCHAR(20),
  `COUNT` INT,
  `DATE` DATETIME,
  `UNIT` VARCHAR(20),
  `CATEGORY_ID` BIGINT,
  `NAME` VARCHAR(20),
  PRIMARY KEY (`ITEM_ID`),
  FOREIGN KEY (`CATEGORY_ID`) REFERENCES `CATEGORY`(`CATEGORY_ID`)
);

CREATE TABLE `COMPOSITE` (
  `COMPOSITE_ID` BIGINT AUTO_INCREMENT,
  `ITEM_ID` BIGINT,
  PRIMARY KEY (`COMPOSITE_ID`),
  FOREIGN KEY (`ITEM_ID`) REFERENCES `ITEM`(`ITEM_ID`)
);

CREATE TABLE `SITE` (
  `SITE_ID` BIGINT AUTO_INCREMENT,
  `EMAIL` VARCHAR(20),
  `PASSWORD` VARCHAR(20),
  `USER_ID` BIGINT,
  PRIMARY KEY (`SITE_ID`),
  FOREIGN KEY (`USER_ID`) REFERENCES `USER`(`USER_ID`)
);

